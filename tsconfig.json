{
  "compilerOptions": {
    "types": ["node", "lodash", "jest"],
    "allowJs": true,
    "outDir": "dist",
    "target": "es6",
    "module": "es6",
    "lib": ["es2016"],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node"
  },
  "include": ["js/*"]
}
